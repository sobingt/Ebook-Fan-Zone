@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" lang="en" />

    <script type="text/javascript" src="../../Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="../../Scripts/bootstrap.min.js"></script>

    @Styles.Render("~/Content/styles")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Ebook Fan Zone</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="pull-right member_css">
        <button class="btn btn-large">Sign In</button>
        <button class="btn btn-success btn-large" data-toggle="modal" data-target="#myModal">Sign Up</button>
    </div>
    <div class="container" style="clear: both;">
        <div class="hero-unit">
            <h1>Ebook Fan Zone</h1>
        </div>
        <div class="row">
            <div class="span4">
                <h2>Top 10 books</h2>
            </div>
            <div class="span4">
                <h2>Revevers</h2>
            </div>
            <div class="span4">
                <h2>Top 10 reviewers</h2>
            </div>
        </div>
    </div>

    <div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Join to Ebook Fan Zone for FREE!</h3>
        </div>

        <div class="row">
            <div class="span3 well" style="margin-left: 30px;">
                <form accept-charset="UTF-8" action="" method="post">
                    <input class="span3" name="firstName" placeholder="First Name" type="text">
                    <input class="span3" name="lastName" placeholder="Last Name" type="text">
                    <input class="span3" name="username" placeholder="Username" type="text">
                    <input class="span3" name="email" placeholder="E-Mail" type="text">
                    <input class="span3" name="dateofbirth" placeholder="Date Of Birth" type="date">
                    <input class="span3" name="password" placeholder="Password" type="password">
                    <button class="btn btn-warning" type="submit">Sign up for Ebook Fan Zone</button>
                </form>
            </div>

            <div class="span3">
                <a href="Authorize?registerType=@EbookZone.Domain.Enums.AccountType.Google" class="btn btn-danger btn-large" style="width: 220px">Join with Google Account</a>
                <br />
                <br />
                <a href="Authorize?registerType=@EbookZone.Domain.Enums.AccountType.Facebook" class="btn btn-primary btn-large" style="width: 220px">Join with Facebook Account</a>
                <br />
                <br />
                <button class="btn btn-info btn-large" type="submit" style="width: 250px">Join with Twitter Account</button><br />
                <br />
            </div>

        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
    </div>

    <footer>
        <p>&#64; Ebook Fan Zone  2012</p>
    </footer>
</body>
</html>